<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cr.ac.ucr.ecci.golapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock" >
        <activity
            android:name=".ui.SplashActivity"
            android:label="@string/title_activity_splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.TablaPosiciones"
            android:label="@string/title_activity_tabla_posiciones" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cr.ac.ucr.ecci.golapp.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.ProxJornadaActivity"
            android:label="@string/title_activity_prox_jornada" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cr.ac.ucr.ecci.golapp.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.GoleadoresActivity"
            android:label="@string/title_activity_goleadores" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cr.ac.ucr.ecci.golapp.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name=".ui.JornadaAnteriorActivity"
            android:label="@string/title_activity_jornada_anterior" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cr.ac.ucr.ecci.golapp.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.EstadisticasActivity"
            android:label="@string/title_activity_estadisticas" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cr.ac.ucr.ecci.golapp.ui.JornadaAnteriorActivity" />
        </activity>
    </application>

</manifest>