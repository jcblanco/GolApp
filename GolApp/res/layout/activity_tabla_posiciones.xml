<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/tabla_titles"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="0dp"
        android:padding="5dp"
        android:weightSum="100" >

        <TextView
            android:id="@+id/escudo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Escudo"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/nombreEquipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Equipo"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/partidosJugados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PJ"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/partidosGanados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PG"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/partidosEmpatados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PE"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/partidosPerdidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PP"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/golDiferencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GD"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/puntos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PUNTOS"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <ListView
        android:id="@+id/equipos_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/tabla_titles" >
    </ListView>

</RelativeLayout>